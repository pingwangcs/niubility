<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" 
    android:layout_height="150dp"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/result_item_padding_left_right"
    android:paddingRight="@dimen/result_item_padding_left_right"
    android:paddingTop="@dimen/result_item_padding_top_bottom"
    android:paddingBottom="@dimen/result_item_padding_top_bottom">
    
    <ImageView
        android:id="@+id/image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:paddingRight="@dimen/result_item_padding_left_right"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"/>
        <TextView
            android:id="@+id/start_time"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/end_time"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"/>

        </LinearLayout>

</LinearLayout>
